{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "maxLength": 13,
            "metadata": {
                "description": "VM Name"
            }
        },
        "vmSize": {
            "type": "string",
            "metadata": {
                "description": "VM Size"
            },
            "defaultValue": "Standard_GS5 (448 GB, Certified)",
            "allowedValues": [
                "Standard_GS5 (448 GB, Certified)",
                "Standard_M64s (1 TB, Certified)",
                "Standard_M64ms (1.7 TB, Certified)",
                "Standard_M128s (2 TB, Certified)",
                "Standard_M128ms (3.8 TB, Certified)",
	            "Standard_M208ms_v2",
                "Standard_E16s_v3 (128 GB)",
                "Standard_E32s_v3 (256 GB)",
                "Standard_E64s_v3 (448 GB)"
            ]
        },   
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "The HANA VNET"
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "The data subnet name"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine"
            }
        },
        "hanaPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Default Admin password"
            }
        },
        "operatingSystem": {
            "type": "string",
            "metadata": {
                "description": "Operating system for HANA Machine"
            },
            "defaultValue": "SLES for SAP 12 SP3",
            "allowedValues": [
                "SLES for SAP 12 SP3",
		        "SLES for SAP 12 SP2",
                "RHEL 7.2 for SAP HANA",
                "RHEL 7.6"
            ]
        },
        "staticIP": {
            "type": "string",
            "metadata": {
                "description": "IP Address for the HANA VM when Static IP Allocation Method has been selected"
            },
            "defaultValue": "10.1.0.4"
        },
        "hanaVmIpAllocationMethod": {
            "type": "string",
            "allowedValues" : [
              "Dynamic",
              "Static"
            ],
            "metadata": {
                "description": "IP Allocation Method"
          },
          "defaultValue": "Dynamic"
        },
        "availSetName": {
            "type": "string",
            "metadata": {
                "description": "This is the name of the availability set to deploy the machine in"
            },
            "defaultValue": "hana-avail"
        },                    
        "SMTUri": {
            "type": "string",
            "metadata": {
              "description": "SMT URI, blank for none"
            },
            "defaultValue": ""
          }                               
    },
  "variables": {
    "baseUri": "https://raw.githubusercontent.com/Zuldajri/sapm/master/",
    "smallUri": "[concat(variables('baseUri'),'nested/small.json')]",
    "mediumUri": "[concat(variables('baseUri'),'nested/medium.json')]",
    "largeUri": "[concat(variables('baseUri'),'nested/large.json')]",
    "extralargeUri": "[concat(variables('baseUri'),'nested/extralarge.json')]",
    "superlargeUri": "[concat(variables('baseUri'),'nested/superlarge.json')]",	  
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetName'))]",
    "hanaSubnetRef": "[concat(variables('vnetID'), '/subnets/',parameters('subnetName'))]",
    "vmSizeArray": "[split(parameters('vmSize'),' ')]",
    "vmSize": "[variables('vmSizeArray')[0]]"
},
    "resources": [
          { 
            "condition": "[or(or(equals(variables('vmSize'),'Standard_E16s_v3'),equals(variables('vmSize'),'Standard_E32s_v3')), or(equals(variables('vmSize'),'Standard_E64s_v3'),equals(variables('vmSize'),'Standard_GS5')))]",
            "apiVersion": "2019-05-01",
            "name": "[concat('SmallLinkedTemplate', parameters('vmName'))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('smallUri')]"
                },
                "parameters": {           
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "hanaSubnetRef": {
                        "value": "[variables('hanaSubnetRef')]"
                    },
                    "operatingSystem": {
                        "value": "[parameters('operatingSystem')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('hanaPassword')]"
                    },
                    "vmSize": {
                        "value": "[variables('vmSize')]"
                    },
                    "ipAllocationMethod":{
                        "value": "[parameters('hanaVmIpAllocationMethod')]"
                    },
                    "staticIP":{
                        "value": "[parameters('staticIP')]"
                    },
                    "availSetName": {
                        "value": "[parameters('availSetName')]"
                      },                             
                    "SMTUri":{
                        "value": "[parameters('SMTUri')]"
                    }
                }
            }
        },
        {
            "condition": "[equals(variables('vmSize'),'Standard_M64s')]",
            "apiVersion": "2019-05-01",
            "name":"[concat('MediumLinkedTemplate', parameters('vmName'))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('mediumUri')]"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "hanaSubnetRef": {
                        "value": "[variables('hanaSubnetRef')]"
                    },
                    "operatingSystem": {
                        "value": "[parameters('operatingSystem')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('hanaPassword')]"
                    },
                    "vmSize": {
                        "value": "[variables('vmSize')]"
                    },
                    "ipAllocationMethod":{
                        "value": "[parameters('hanaVmIpAllocationMethod')]"
                    },
                    "staticIP":{
                        "value": "[parameters('staticIP')]"
                    },
                    "availSetName": {
                        "value": "[parameters('availSetName')]"
                      },                             
                    "SMTUri":{
                        "value": "[parameters('SMTUri')]"
                    }
                }
            }
        },
        {
            "condition": "[or(equals(variables('vmSize'),'Standard_M64ms'),equals(variables('vmSize'),'Standard_M128s'))]",
            "apiVersion": "2019-05-01",
            "name": "[concat('LargeLinkedTemplate', parameters('vmName'))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('largeUri')]"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "hanaSubnetRef": {
                        "value": "[variables('hanaSubnetRef')]"
                    },
                    "operatingSystem": {
                        "value": "[parameters('operatingSystem')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('hanaPassword')]"
                    },
                    "vmSize": {
                        "value": "[variables('vmSize')]"
                    },
                    "ipAllocationMethod":{
                        "value": "[parameters('hanaVmIpAllocationMethod')]"
                    },
                    "staticIP":{
                        "value": "[parameters('staticIP')]"
                    },
                    "availSetName": {
                        "value": "[parameters('availSetName')]"
                      },                             
                    "SMTUri":{
                        "value": "[parameters('SMTUri')]"
                    }
                }
            }
        },
        {
            "condition": "[equals(variables('vmSize'), 'Standard_M128ms')]",
            "apiVersion": "2019-05-01",
            "name": "[concat('extraLargeLinkedTemplate', parameters('vmName'))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('extralargeUri')]"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "hanaSubnetRef": {
                        "value": "[variables('hanaSubnetRef')]"
                    },
                    "operatingSystem": {
                        "value": "[parameters('operatingSystem')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('hanaPassword')]"
                    },
                    "vmSize": {
                        "value": "[variables('vmSize')]"
                    },
                    "ipAllocationMethod":{
                        "value": "[parameters('hanaVmIpAllocationMethod')]"
                    },
                    "staticIP":{
                        "value": "[parameters('staticIP')]"
                    },
                    "availSetName": {
                        "value": "[parameters('availSetName')]"
                      },                             
                    "SMTUri":{
                        "value": "[parameters('SMTUri')]"
                    }
                } 
	        }
        },
        {
            "condition": "[equals(variables('vmSize'), 'Standard_M208ms_v2')]",
            "apiVersion": "2019-05-01",
            "name": "[concat('superLargeLinkedTemplate', parameters('vmName'))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('superlargeUri')]"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "hanaSubnetRef": {
                        "value": "[variables('hanaSubnetRef')]"
                    },
                    "operatingSystem": {
                        "value": "[parameters('operatingSystem')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('hanaPassword')]"
                    },
                    "vmSize": {
                        "value": "[variables('vmSize')]"
                    },
                    "ipAllocationMethod":{
                        "value": "[parameters('hanaVmIpAllocationMethod')]"
                    },
                    "staticIP":{
                        "value": "[parameters('staticIP')]"
                    },
                    "availSetName": {
                        "value": "[parameters('availSetName')]"
                      },                             
                    "SMTUri":{
                        "value": "[parameters('SMTUri')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
